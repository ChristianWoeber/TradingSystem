<UserControl x:Class="Trading.UI.Wpf.Controls.CurrentHoldingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Trading.UI.Wpf.Controls"
             xmlns:arts="http://arts.co.at/common/lib/wpf/controls"
             xmlns:models="clr-namespace:HelperLibrary.Database.Models;assembly=HelperLibrary"
             xmlns:viewModels="clr-namespace:Trading.UI.Wpf.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewModels:TradingViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <arts:SmartDataGrid AutoGenerateColumns="False" ItemsSource="{Binding Holdings, Mode=OneWay}" HeaderFontSize="4">
            <arts:SmartDataGrid.Columns >
                <arts:SmartDataGridColumn Binding="{Binding SecurityId}" Header="SecurityId"/>
                <arts:SmartDataGridColumn Binding="{Binding TransactionDateTime, StringFormat=d}" Header="TransaktionsDatum"/>
                <arts:SmartDataGridColumn Binding="{Binding TargetWeight, StringFormat=P}" Header="Ziel-Gewicht"/>
                <arts:SmartDataGridColumn Binding="{Binding EffectiveAmountEur, StringFormat=C}" Header="Ziel-Amount-Effektiv"/>
            </arts:SmartDataGrid.Columns>
        </arts:SmartDataGrid>
    </Grid>
</UserControl>
